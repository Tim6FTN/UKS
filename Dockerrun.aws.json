{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "memory":256,
            "essential": true,
            "image": "mmilovanovic/tim6uks_nginx:latest",
            "mountPoints": [
                {
                    "containerPath": "/etc/nginx/conf.d",
                    "sourceVolume": "_ConfigNginx"
                },
                {
                    "containerPath": "/code/static",
                    "sourceVolume": "_Static"
                }
            ],
            "name": "nginx",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "links": [
            	"web"
            ]
        },
        {
            "memory":512,
            "command": [
                "./start.sh"
            ],
            "essential": true,
            "image": "mmilovanovic/tim6uks_backend:latest",
            "mountPoints": [
                {
                    "containerPath": "/var/app/current/static",
                    "sourceVolume": "_Static"
                }
            ],
            "name": "web"
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "/static"
            },
            "name": "_Static"
        },
        {
            "host": {
                "sourcePath": "/var/app/current/config/nginx"
            },
            "name": "_ConfigNginx"
        }
    ]

}
